            android:layout_marginLeft="10dp"
            android:textColor="@color/blueHoWork"
            android:text="[Today]" />

        <ImageButton
            android:id="@+id/btnWIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            style="@style/btnWidgetStyle"
            android:src="@drawable/login"
            android:background="@drawable/btn_selector_widget"
            android:contentDescription="IN" />

        <ImageButton
            android:id="@+id/btnWOUT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/btnWidgetStyle"
            android:src="@drawable/logout"
            android:background="@drawable/btn_selector_widget"
            android:contentDescription="OUT"
            />
    </LinearLayout>

